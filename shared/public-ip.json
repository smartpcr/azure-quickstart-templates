{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "metadata": {
        "description": "Name of the cluster."
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet."
      }
    },
    "dnsName": {
      "type": "string",
      "metadata": {
        "description": "Name of DNS."
      }
    },
    "publicIpName": {
      "type": "string",
      "metadata": {
        "description": "Name of the node type."
      }
    },
    "targetEnvironment": {
      "type": "string",
      "allowedValues": [ "individual", "dev", "ppe", "prod" ],
      "defaultValue": "dev",
      "metadata": {
        "description": "String to determine which environment the ARM is targeting."
      }
    }
  },
  
  "resources": [
    {
      "apiVersion": "2017-03-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(parameters('publicIpName'),'-', parameters('subnetName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsName')]"
        },
        "publicIPAllocationMethod": "Dynamic"
      },
      "tags": {
        "resourceType": "Service Fabric",
        "clusterName": "[parameters('clusterName')]"
      }
    }
  ],
  "outputs": {
    
  }
}