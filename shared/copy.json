{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseTemplateUri": {
      "type": "string",
      "metadata": {
        "description": "Base URI of template resources."
      }
    },
    "sharedTemplateName": {
      "type": "string",
      "metadata": {
        "description": "Name of the nested deployment."
      }
    },
    "targetEnvironment": {
      "type": "string",
      "allowedValues": [ "individual", "dev", "ppe", "prod" ],
      "defaultValue": "dev",
      "metadata": {
        "description": "String to determine which environment the ARM is targeting."
      }
    }
  },
  "variables": {
    "deploymentApiVersion": "2017-05-10"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('deploymentApiVersion')]",
      "name": "[concat('nested-', '')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('baseTemplateUri'), '/shared/', parameters('sharedTemplateName'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "targetEnvironment": "[parameters('targetEnvironment')]"
        }
      }
    }
  ],
  "outputs": {

  }
}